{
    "compilerOptions": {
        "module": "nodenext",
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "types": [],
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "noUncheckedIndexedAccess": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "moduleDetection": "force",
        "skipLibCheck": true
    },
    "include": ["resources/**/*.ts", "resources/**/*.d.ts"]
}
